USE hw_student;

CREATE TABLE teachers(
    ID_No INT AUTO_INCREMENT,
    Name VARCHAR(60) NOT NULL DEFAULT 'UNKNOWN USER',
    Address VARCHAR(100),
    Age INT NOT NULL,
    PRIMARY KEY(ID_No)
);

