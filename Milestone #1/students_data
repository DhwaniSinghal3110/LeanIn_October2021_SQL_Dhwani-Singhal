SELECT * FROM students_data;

SELECT Roll_No,First_Name,Class_Rank FROM students_data;

SElECT Roll_No AS 'Roll Number',First_Name AS 'First name',Last_Name AS 'last name',Class_Rank AS 'Rank' 
FROM students_data;

